			<td><?=$row['id'];?></td>
			<td><?=$row['firstName'];?></td>
			<td><?=$row['lastName'];?></td>
			<td><?=$row['email'];?></td>
			<td><?=$row['empPassword'];?></td>
			<td><?=$row['confirmPassword'];?></td>

			<td><?=$row['profileImage'];?></td>
			<td><?=$row['mobileNumber'];?></td>
			<td><?=$row['gender'];?></td>
			<td><?=$row['hobby'];?></td>
			<td><?=$row['country'];?></td>
			
		</tr>
<?php	
	}
	}
	else {
		echo "0 results";
	}
	mysqli_close($conn);
?>